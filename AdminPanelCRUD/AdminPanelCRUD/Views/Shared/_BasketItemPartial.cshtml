@model List<BasketItemViewModel>
@if (Model.Count > 0)
{
    foreach (var item in Model)
    {
        if (item.Count > 0)
        {
            <div class="cart-product basketItem">
                <a href="product-details.html" class="image">
                    <img class="basketItemImage" src="~/uploads/books/@item?.Image" alt="">
                </a>
                <div class="content">
                    <h3 class="title">
                        <a class="basketItemTitle" href="product-details.html">
                            @item.Name
                        </a>
                    </h3>
                    <p class="price"><span class="qty basketItemCount" id="basketItemCount">@item.Count </span><span class="qty"> x</span> £@Math.Round((item.Price * (1 - item.Discount / 100)),2)</p>
                    <a asp-controller="book" asp-action="removefrombasket" asp-route-bookId="@item.BookId" class="cross-btn btn-deletebook"><i class="fas fa-times"></i></a>
                </div>
            </div>
        }

    }
    <div class="single-cart-block">
        <div class="btn-block">
            <a href="cart.html" class="btn">
                View Cart <i class="fas fa-chevron-right"></i>
            </a>
            <a asp-controller="book" asp-action="checkout" class="btn btn--primary">
                Check Out <i class="fas fa-chevron-right"></i>
            </a>
        </div>
    </div>
}
else
{
    <div class="text-danger text-center font-weight-bold" style="font-size:24px;">Səbət boşdur!</div>
}